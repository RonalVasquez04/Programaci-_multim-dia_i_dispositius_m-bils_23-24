<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardBackgroundColor="#F8F5F5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textPos"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/textviewborderclasification"
                android:gravity="center"
                android:text="POS"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textNumberDriver"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/textviewborderclasification"
                android:gravity="center"
                android:text="NÂº"
                app:layout_constraintStart_toEndOf="@+id/textPos"
                tools:layout_editor_absoluteY="9dp" />

            <TextView
                android:id="@+id/textNomDriver"
                android:layout_width="153dp"
                android:layout_height="match_parent"
                android:background="@drawable/textviewborderclasification"
                android:gravity="center"
                android:text="DRIVER"
                app:layout_constraintStart_toEndOf="@+id/textNumberDriver"
                tools:layout_editor_absoluteY="6dp" />

            <TextView
                android:id="@+id/textConstructorClasfication"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/textviewborderclasification"
                android:gravity="center"
                android:text="Constructor"
                app:layout_constraintStart_toEndOf="@+id/textNomDriver"
                tools:layout_editor_absoluteY="11dp" />

            <TextView
                android:id="@+id/textTimeDriver"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="@drawable/textviewborderclasification"
                android:gravity="center"
                android:text="10:20:20"
                app:layout_constraintStart_toEndOf="@+id/textConstructorClasfication"
                tools:layout_editor_absoluteY="11dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>