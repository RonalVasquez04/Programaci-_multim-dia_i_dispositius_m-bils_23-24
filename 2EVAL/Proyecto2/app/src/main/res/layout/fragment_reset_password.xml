<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondof1resetpassword"
    tools:context=".ResetPasswordFragment">

    <Button
        android:id="@+id/btnGoBackResetPassword"
        android:layout_width="71dp"
        android:layout_height="61dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_back_foreground"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textoEmailReset"
        android:layout_width="315dp"
        android:layout_height="43dp"
        android:layout_marginTop="312dp"
        android:background="#DAD6D6"
        android:ems="10"

        android:hint="Email"
        android:inputType="text"
        android:paddingLeft="10dp"
        app:circularflow_radiusInDP="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/redondeado"
        android:text="SUBMIT"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoEmailReset" />

</androidx.constraintlayout.widget.ConstraintLayout>